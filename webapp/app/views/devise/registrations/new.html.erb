</div>
<div class="main-container internal">
  <div class="main wrapper clearfix section">
    <article>
      <section>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
          <div><%= f.label :sip_username, "Username" %><br />
          <%= f.text_field :sip_username %></div>

          <div><%= f.label :email, "Enter your email" %><br />
          <%= f.email_field :email %></div>

          <div><%= f.label :password, "Create an account password" %><br />
          <%= f.password_field :password %></div>

          <div><%= f.label :password_confirmation, "Confirm your account password" %><br />
          <%= f.password_field :password_confirmation %></div>

          <div><%= f.submit "Sign up" %></div>
        <% end %>
      </section>
    </article>
  </div>
</div>
